<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Veuillez entrer une description precise de la rectte ainsi que le regime pour lequel elle s'applique" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView38"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom de la recette"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/nom_recette"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@color/cardview_light_background"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textColor="@color/cast_expanded_controller_background_color" />

    <Button
        android:id="@+id/propval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:background="@android:drawable/alert_dark_frame"
        android:text="Valider" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attention vous ne pourez proposer une nouvelle recette seulement une fois qu'un administrateur vous y'ai autorisÃ©" />
</LinearLayout>